---
import Layout from '../layouts/Layout.astro';
import { LoginButtons } from '../components/LoginButtons';
import { motion } from 'framer-motion';
---

<Layout title="Bienvenido">
	<main class="flex-1 flex flex-col items-center justify-center p-6 relative overflow-hidden">
		<!-- Background Decoration -->
		<div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-godot-blue/10 rounded-full blur-[120px] -z-10"></div>
		
		<div class="text-center mb-12">
			<img src="/favicon.svg" alt="Godot Logo" class="w-24 h-24 mx-auto mb-6 animate-bounce-slow" />
			<h1 class="text-5xl md:text-7xl font-bold tracking-tighter mb-4">
				Domina <span class="text-godot-blue">Godot 4.6</span>
			</h1>
			<p class="text-white/60 text-lg md:text-xl max-w-2xl mx-auto leading-relaxed">
				Aprende desarrollo de videojuegos con lecciones de <span class="text-godot-green font-bold">5 minutos</span>. 
				Micro-learning diseñado para creadores modernos.
			</p>
		</div>

		<div class="glass p-8 rounded-[2rem] border border-white/10 shadow-2xl w-full max-w-md">
			<h2 class="text-xl font-bold mb-6 text-center">Comienza tu aventura</h2>
			<LoginButtons client:load />
			<p class="text-[10px] text-white/30 mt-6 text-center uppercase tracking-widest">
				Al entrar aceptas los términos de servicio
			</p>
		</div>

		<div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl w-full">
			{[
				{ title: "Micro-learning", desc: "Vídeos cortos y concisos" },
				{ title: "Proyectos Reales", desc: "Aprende haciendo" },
				{ title: "Comunidad", desc: "Crece con otros devs" }
			].map(feature => (
				<div class="text-center p-4">
					<h3 class="font-bold text-godot-blue mb-1">{feature.title}</h3>
					<p class="text-sm text-white/50">{feature.desc}</p>
				</div>
			))}
		</div>
	</main>
</Layout>

<style>
	@keyframes bounce-slow {
		0%, 100% { transform: translateY(0); }
		50% { transform: translateY(-10px); }
	}
	.animate-bounce-slow {
		animation: bounce-slow 3s ease-in-out infinite;
	}
</style>
